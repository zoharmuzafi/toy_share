<div class="container">
	<div class="row">
		<div class="col m8">
			<h1>Login</h1>
			<%= form_for :user, url: "/sessions", method: :post do |f| %>
				<div class="input-group">
					<%= f.label :email %>
					<%= f.text_field :email, placeholder: "example@email.com" %>
				</div>
				<div class="input-group">
					<%= f.label :password %>
					<%= f.password_field :password %>
				</div>
				<div class="input-group">
					<%= f.submit "Login" %>
				</div>
			<% end %>			
		</div>
	</div>
</div>
